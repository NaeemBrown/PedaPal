<!-- SettingsPage.xaml -->
<Window x:Class="PedagogyPal.Windows.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <!-- Your Settings Page UI elements -->

        <!-- Example Settings Content -->
        <StackPanel Margin="20">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Example Setting: Username -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Username:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="UsernameTextBox" Width="200"/>
            </StackPanel>

            <!-- Example Setting: Email -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Email:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="EmailTextBox" Width="200"/>
            </StackPanel>

            <!-- Save and Cancel Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" Width="100" Height="30" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Height="30" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Back Button -->
        <Button Content="Back" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="BackButton_Click"/>
    </Grid>
</Window>
